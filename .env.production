# 生产环境配置示例
# 复制此文件为 .env 并修改相应配置

# MySQL 数据库配置 - 请使用强密码
MYSQL_DATABASE=epay_prod
MYSQL_USER=epay_user
MYSQL_PASSWORD=your_very_secure_password_here
MYSQL_ROOT_PASSWORD=your_very_secure_root_password_here

# 应用端口配置
APP_PORT=8080

